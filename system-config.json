{
  "designSystem": {
    "version": "2.0.0",
    "name": "AI-Powered Design System Playbook",
    "description": "Intelligent design system with contextual adaptation and multi-persona consultation",
    
    "core": {
      "foundation": {
        "typography": {
          "fontFamily": "Mulish",
          "allowedWeights": [400, 500, 600, 700],
          "gridBasedSizes": [12, 14, 16, 18, 20, 24, 32, 40, 48],
          "maxSize": 48
        },
        "spacing": {
          "gridUnit": 8,
          "allowedValues": "multiples of 4px or 8px only",
          "enforcement": "strict"
        },
        "colors": {
          "system": "semantic tokens only",
          "forbidden": ["hardcoded hex", "arbitrary values", "non-semantic classes"],
          "required": ["bg-primary", "text-foreground", "bg-background", "text-muted-foreground"]
        },
        "components": {
          "foundation": "shadcn/ui mandatory",
          "customization": "extend only, never replace",
          "compliance": "automatic validation required"
        }
      },
      
      "aiIntelligence": {
        "contextDetection": {
          "device": ["screen size", "input method", "capabilities"],
          "user": ["accessibility needs", "preferences", "behavior patterns"], 
          "environment": ["lighting", "network", "performance constraints"],
          "temporal": ["timezone", "usage patterns", "seasonal variations"]
        },
        "adaptation": {
          "rules": "maintain foundation compliance",
          "scope": "optimize within constraints",
          "validation": "automatic compliance checking"
        }
      }
    },
    
